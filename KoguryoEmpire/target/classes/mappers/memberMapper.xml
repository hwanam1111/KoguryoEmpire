<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.km.mapper.memberMapper">
 	
 	<select id="selectMember" resultType="memberVO">
        SELECT * FROM MEMBER;
    </select>
    
    <insert id="insertMember" parameterType="memberVO">
    	INSERT INTO member(memEmail, memPassword, memName, memNickname, memBirthday, memIp, memClass, memDate) VALUES(#{memEmail}, #{memPassword}, #{memName}, #{memNickname}, #{memBirthday}, #{memIp}, 1, curdate());
    </insert>
    
    <select id="idChecked" parameterType="memberVO" resultType="memberVO"> 
		select * from member where memEmail=#{memEmail}
	</select>
    
</mapper>